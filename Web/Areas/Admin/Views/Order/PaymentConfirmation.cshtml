@model int

@inject IViewLocalizer Localizer

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">@Localizer["Payment Successful"]</h1>
        @Localizer["Order Number"]: @Model<br /><br />
    </div>
    <div class="col-12 text-center" style="color: maroon">
        <br />
        @Localizer["Payment has been applied successfully"]<br />
        <a asp-area="Admin"
        asp-controller="Order"
        asp-action="Details"
        asp-route-orderId="@Model"
        class="btn btn-primary">@Localizer["Back to Order Details"]</a>
    </div>
</div>