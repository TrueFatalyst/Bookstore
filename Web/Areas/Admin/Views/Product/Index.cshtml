@inject IViewLocalizer Localizer

<link rel="stylesheet" href="~/css/product.css" />

<div class="card shadow border-0 mt-4 mb-3">
    <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
        <div class="row px-4">
            <div class="col-12 text-center">
                <h5 class="pt-2 text-white">
                    @Localizer["Product List"]
                </h5>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row">
            <div class="row pt-1 pb-4">
                <div class="col-12 text-end">
                    <a asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> @Localizer["Create New Product"]
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <table id="tblData" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>ISBN</th>
                            <th>@Localizer["Price"]</th>
                            <th>@Localizer["Author"]</th>
                            <th>@Localizer["Category"]</th>
                            <th>@Localizer["Is Promotional"]</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/product.js"></script>
}